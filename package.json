{
  "name": "llm-bridge",
  "version": "0.1.0",
  "description": "A unified bridge to multiple LLM provider APIs.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langadventurellc/llm-bridge.git"
  },
  "author": "LangAdventure LLC",
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/langadventurellc/llm-bridge#readme",
  "scripts": {
    "test": "jest",
    "test:e2e": "NODE_OPTIONS='--import=dotenv/config' jest --config jest.e2e.config.mjs",
    "test:e2e:openai": "NODE_OPTIONS='--import=dotenv/config' jest --config jest.e2e.config.mjs --testPathPattern=openai",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\" --log-level silent",
    "quality": "npm run lint && npm run format && npm run type-check",
    "prepare": "husky"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@langadventurellc/tsla-linter": "^2.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-sonarjs": "^3.0.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  }
}
