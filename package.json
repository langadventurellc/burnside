{
  "name": "@langadventurellc/burnside",
  "version": "0.0.0-development",
  "description": "A TypeScript LLM provider adapter with MCP support for Desktop, Mobile, and API platforms.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langadventurellc/burnside.git"
  },
  "author": "LangAdventure LLC",
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/langadventurellc/burnside#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:e2e": "NODE_OPTIONS='--import=dotenv/config' jest --config jest.e2e.config.mjs",
    "test:e2e:openai": "NODE_OPTIONS='--import=dotenv/config' jest --config jest.e2e.config.mjs --testPathPatterns=openai",
    "test:e2e:anthropic": "NODE_OPTIONS='--import=dotenv/config' jest --config jest.e2e.config.mjs --testPathPatterns=anthropic",
    "test:e2e:google": "NODE_OPTIONS='--import=dotenv/config' jest --config jest.e2e.config.mjs --testPathPatterns=google",
    "test:e2e:xai": "NODE_OPTIONS='--import=dotenv/config' jest --config jest.e2e.config.mjs --testPathPatterns=xai",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\" --log-level silent",
    "quality": "npm run lint && npm run format && npm run type-check",
    "prepare": "husky"
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "peerDependencies": {
    "react-native-sse": "^1.2.1"
  },
  "devDependencies": {
    "@langadventurellc/tsla-linter": "^2.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-sonarjs": "^3.0.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  }
}
